doctype html 
html(lang="ko")
    head
        include ../partials/meta.pug
        include ../partials/meta-og.pug
        include ../partials/meta-twitter.pug
        include ../partials/icon.pug
        block head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title #{pageTitle} | Marshot Project
    body 
        header 
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Freedom
                    if loggedIn
                        li 
                            a(href="/marstube/upload") Upload Video
                        li 
                            a(href=`/users/${loggedInUser._id}`) My Profile
                        li 
                            a(href="/users/edit") Edit Profile
                        li 
                            a(href="/users/signout") Sign Out 
                        li 
                            a(href="my-profile") #{loggedInUser.username}
                    else
                        li
                            a(href="/signup") Sign Up
                        li 
                            a(href="/signin") Sign In
                    li 
                        a(href="/search") Search
        main
            block content
    include ../partials/footer.pug